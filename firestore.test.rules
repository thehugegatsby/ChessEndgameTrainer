/**
 * Firestore Security Rules for Testing
 * 
 * Simplified rules for integration testing with proper auth checks
 */

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User progress subcollection
    match /users/{userId}/userProgress/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Test positions collection (for existing tests)
    match /positions/{positionId} {
      allow read, write: if true;
    }
    
    match /categories/{categoryId} {
      allow read, write: if true;
    }
    
    match /chapters/{chapterId} {
      allow read, write: if true;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}