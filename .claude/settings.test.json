{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__zen__challenge",
      "Bash(gh issue create:*)",
      "WebFetch(domain:lichess.org)",
      "mcp__zen__chat",
      "Bash(npm run dev:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "tools": ["Bash"]
        },
        "hooks": [".claude/hooks/pre-bash-wsl-safety.py"]
      }
    ]
  }
}
