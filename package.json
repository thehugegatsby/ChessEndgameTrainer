{
  "name": "endgamebook",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "node -e \"const {PORTS} = require('./config/ports'); require('child_process').execSync('next dev -p ' + PORTS.DEV, {stdio: 'inherit'})\"",
    "dev:e2e": "NEXT_PUBLIC_IS_E2E_TEST=true next dev -p 3009",
    "build": "next build",
    "start": "next start",
    "test": "node scripts/smart-test.js",
    "test:unit": "vitest run --project chess-core --project tablebase --project training --project shared",
    "test:integration": "vitest run --project integration",
    "test:watch": "vitest watch --project chess-core --project tablebase --project training --project shared",
    "test:chess": "vitest run --project chess-core",
    "test:tablebase": "vitest run --project tablebase",
    "test:training": "vitest run --project training",
    "test:shared": "vitest run --project shared",
    "test:coverage": "vitest run --project chess-core --project tablebase --project training --project shared --coverage",
    "test:all": "npm-run-all test:unit test:integration",
    "test:e2e": "playwright test --config=config/testing/playwright.config.ts",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "new-feature": "node scripts/new-feature.js",
    "e2e:ui": "playwright test --config=config/testing/playwright.config.ts --ui",
    "e2e:debug": "playwright test --config=config/testing/playwright.config.ts --headed",
    "ci": "npm-run-all lint type-check test:all",
    "ci:install": "pnpm install --frozen-lockfile",
    "lint:fix": "next lint --fix",
    "analyze": "node scripts/analyze-code.js",
    "analyze:bundle": "cross-env ANALYZE=true pnpm run build",
    "bundle:check": "bundlesize",
    "build:size": "pnpm run build && pnpm run bundle:check",
    "check-duplicates": "node scripts/check-duplicates.js",
    "pre-commit": "lint-staged",
    "firebase:emulator": "firebase emulators:start",
    "firebase:deploy": "firebase deploy --only firestore",
    "firebase:rules": "firebase deploy --only firestore:rules",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "outdated": "pnpm outdated",
    "prepare": "husky"
  },
  "lint-staged": {
    "{shared,tests,pages}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@tanstack/react-query": "^5.85.3",
    "autoprefixer": "^10.4.21",
    "chess.js": "^1.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "firebase": "^12.0.0",
    "happy-dom": "^18.0.1",
    "immer": "^10.1.1",
    "nanoid": "^5.1.5",
    "next": "^15.3.3",
    "next-transpile-modules": "^10.0.1",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-chess-pieces": "^1.1.2",
    "react-chessboard": "^5.2.1",
    "react-dom": "^19.1.1",
    "react-hotkeys-hook": "^5.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "use-sound": "^5.0.0",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^9.9.0",
    "@next/bundle-analyzer": "^15.4.6",
    "@playwright/test": "^1.53.2",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axe-playwright": "^2.1.0",
    "bundlesize": "^0.18.2",
    "dotenv": "^17.0.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.3.5",
    "firebase-admin": "^13.4.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "intersection-observer": "^0.12.2",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.5",
    "next-router-mock": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "description": "Ein adaptives Schachendspiel-Lernsystem mit kuratierten Positionen und personalisiertem Coaching.",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
