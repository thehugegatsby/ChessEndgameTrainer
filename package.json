{
  "name": "endgamebook",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "next dev -p 3002",
    "dev:pm2": "pm2 start ecosystem.config.js",
    "dev:pm2:stop": "pm2 stop endgame-trainer-dev",
    "dev:pm2:restart": "pm2 restart endgame-trainer-dev",
    "dev:pm2:logs": "pm2 logs endgame-trainer-dev",
    "dev:e2e": "cross-env NEXT_PUBLIC_IS_E2E_TEST=true IS_E2E_TEST=true next dev -p 3003",
    "dev:config": "node scripts/dev-server.js",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:business": "jest --config=tests/jest.config.business.js --coverage",
    "test:coverage:evaluation": "jest --config=config/jest/jest.config.feature-coverage.js --coverage",
    "test:integration": "jest --config=tests/jest.config.integration.js",
    "test:real-api": "node scripts/test-real-api.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:critical": "playwright test tests/e2e/critical",
    "_test:firebase": "cross-env IS_E2E_TEST=true playwright test --config=config/playwright/playwright.firebase.config.ts",
    "test:ci": "npm run test:all",
    "kill-port": "node scripts/kill-port.js",
    "validate:agent-config": "node scripts/validate-agent-config.js",
    "mobile:start": "cd app/mobile && expo start",
    "mobile:android": "cd app/mobile && expo start --android",
    "mobile:ios": "cd app/mobile && expo start --ios",
    "mobile:web": "cd app/mobile && expo start --web",
    "check-duplicates": "node scripts/check-duplicate-components.js",
    "check-unused-services": "node scripts/check-unused-services.js",
    "check-unused-files": "node scripts/find-unused-files.js",
    "analyze-unused": "node scripts/deep-unused-analysis.js",
    "analyze-code": "npm run check-duplicates && npm run check-unused-services && npm run check-unused-files",
    "pre-commit": "npm run check-duplicates && npx tsc --noEmit",
    "clean:tests": "node tests/scripts/cleanup.js",
    "tsc": "tsc",
    "test:smoke": "jest --config=tests/jest.config.js --testPathPattern=smoke",
    "audit:fix": "npm audit fix",
    "outdated": "npm outdated",
    "ci:install": "npm ci --prefer-offline --no-audit",
    "ci:test": "npm run lint && npm run tsc -- --noEmit && npm test",
    "migrate:firestore": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register scripts/migrateToFirestore.ts",
    "migrate:verify": "ts-node --project tsconfig.scripts.json -r tsconfig-paths/register scripts/migrateToFirestore.ts --verify",
    "emulator": "firebase emulators:start",
    "fix:position-ids": "npx tsx scripts/renamePositionIds.ts",
    "seed:test-positions": "npx tsx scripts/seedTestPositions.ts",
    "emulator:test": "firebase emulators:start --only firestore",
    "prepare": "husky",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "autoprefixer": "^10.4.21",
    "chess.js": "^1.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "events": "^3.3.0",
    "firebase": "^11.10.0",
    "immer": "^10.1.1",
    "nanoid": "^5.1.5",
    "next": "^15.3.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-chessboard": "^5.2.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.17",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3.3.1",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.53.2",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "axe-playwright": "^2.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.1",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.3.5",
    "eslint-plugin-jsdoc": "^52.0.2",
    "firebase-admin": "^13.4.0",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-fixed-jsdom": "^0.0.9",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.4",
    "next-router-mock": "^1.0.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "undici": "^7.13.0"
  },
  "description": "Ein modernes Tool zum Training von Schachendspielen mit Spaced Repetition.",
  "main": "jest.config.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
